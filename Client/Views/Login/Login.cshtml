@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Layout/LoginLayout.cshtml";
}
<div class="card-body">
    <p class="login-box-msg">Sign in to start your session</p>

    <form id="TB_Account" method="post">
        <div class="input-group mb-3">
            <input class="form-control" placeholder="Email" id="UserName" required="required">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input type="password" class="form-control" placeholder="Password" id="Password" required="required">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="icheck-primary">
                    <input type="checkbox" id="remember">
                    <label for="remember">
                        Remember Me
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-4">
                <button href="#" type="button" class="btn btn-success" id="Login" onclick="login();">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

